<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#ffffff">

            </solid>
            <corners
                android:radius="20dp">

            </corners>
            <stroke
                android:width="3dp"
                android:color="#ffffff">

            </stroke>
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#000000">
            </solid>

            <stroke
                android:width="3dp"
                android:color="#ffffff">

            </stroke>

            <corners
                android:radius="20dp">
            </corners>

        </shape>
    </item>

</selector>